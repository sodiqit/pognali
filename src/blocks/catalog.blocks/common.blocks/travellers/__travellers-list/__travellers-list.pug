include ./__users/__users
include ./__pagination/__pagination
mixin travellers-list(option)
  div(class="travellers-list " + option.block_name)
    h2.visually-hidden Список попутчиков
    +users-list(option.users_list)
    button(class="travellers-list__show-more" type="button") 
      svg(viewBox="0 0 27 27" width="18" height="18")
        use(xlink:href="#plus")
      span Показать еще
    +users-pagination(option.users_pagination)
