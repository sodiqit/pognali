.transport.profile__transport
  label.transport__label Транспорт
  ul.transport__list
    li.transport__list__item
      input(class="visually-hidden" type="checkbox" id="airplane" name="airplane" checked)
      label(for="airplane").transport__list__label.transport__list__label--plane
        span.visually-hidden Самолет
        svg
          use(xlink:href="#plane")
    li.transport__list__item
      input(class="visually-hidden" type="checkbox" id="buss" name="bus" checked)
      label(for="buss").transport__list__label.transport__list__label--bus
        span.visually-hidden Автобус
        svg
          use(xlink:href="#bus")
    li.transport__list__item
      input(class="visually-hidden" type="checkbox" id="bicyсle" name="bike")
      label(for="bicyсle").transport__list__label.transport__list__label--bike
        span.visually-hidden Велосипед
        svg
          use(xlink:href="#bike")
    li.transport__list__item
      input(class="visually-hidden" type="checkbox" id="afoot" name="run" checked)
      label(for="afoot").transport__list__label.transport__list__label--run
        span.visually-hidden Пешком
        svg
          use(xlink:href="#run")
