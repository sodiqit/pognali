mixin input(options)
  div(class=options.block_name + " input-range")
    button(type="button" class="decrease " + options.block_name) <span class="visually-hidden">Уменьшить #{options.name}</span>
    label=options.name
      span.measuring=options.measuring
      input(type="text" name=options.nameInput value=options.value)
    button(type="button" class="increase " + options.block_name) <span class="visually-hidden">Увеличить #{options.name}</span>
